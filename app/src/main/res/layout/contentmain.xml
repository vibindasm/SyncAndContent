<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Name" />
        <EditText
            android:id="@+id/txtName"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Mob Number" />
        <EditText
            android:id="@+id/txtMob"
            android:inputType="phone"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent" />
        <Button
            android:text="Add Name"
            android:id="@+id/btnAdd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickAddName" />
        <Button
            android:text="Retrieve Contact"
            android:id="@+id/btnRetrieve"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickRetrieveContact" />
    <EditText
        android:id="@+id/txtNameFilter"
        android:hint="Contact Name"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent" />
    <Button
        android:text="filter Contact"
        android:id="@+id/btnRetrievebYName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickRetrieveByName" />
    <EditText
        android:id="@+id/txtIdDel"
        android:hint="Contact ID"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent" />
    <Button
        android:text="Delete Contact"
        android:id="@+id/btnDel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickDelById" />
    <EditText
        android:id="@+id/txtIdUpdate"
        android:hint="Contact ID"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent" />
    <Button
        android:text="GET Contact"
        android:id="@+id/btnGet"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickGetById" />
    <EditText
        android:id="@+id/txtNameUpdate"
        android:hint="Name"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent" />
    <EditText
        android:id="@+id/txtMobUpdate"
        android:hint="Mobie"
        android:inputType="phone"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent" />
    <Button
        android:text="Update Contact"
        android:id="@+id/btnUpdate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickUpdate" />
    </LinearLayout>
</ScrollView>
</LinearLayout>
